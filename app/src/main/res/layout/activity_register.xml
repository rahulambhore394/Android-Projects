<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".RegisterActivity">


    <RelativeLayout
        android:layout_width="@dimen/_105sdp"
        android:layout_height="@dimen/_105sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/profile_layout"
        android:background="@drawable/profile_photo_shape">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            app:cardCornerRadius="@dimen/_200sdp"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/white">

            <ImageView
                android:layout_width="@dimen/_105sdp"
                android:layout_height="@dimen/_105sdp"
                android:id="@+id/user_photo_profile"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"/>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/profile_layout"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_15sdp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@color/secondaryColor"
                android:fontFamily="sans-serif-black"
                android:textSize="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/tv_login_heading"
                android:layout_centerHorizontal="true"
                />
            <EditText
                android:layout_width="@dimen/_230sdp"
                android:layout_height="wrap_content"
                android:id="@+id/et_name_register"
                android:layout_below="@id/tv_login_heading"
                android:hint="Full Name"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/secondaryColor"
                android:textSize="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_8sdp"
                android:drawableLeft="@drawable/user__icon"
                android:drawablePadding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:inputType="text"
                android:background="@drawable/et_rounded_corner"
                />
            <EditText
                android:layout_width="@dimen/_230sdp"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_mo_no_register"
                android:layout_below="@id/et_name_register"
                android:hint="Mobile No."
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/secondaryColor"
                android:textSize="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_8sdp"
                android:drawableLeft="@drawable/phone_icon"
                android:drawablePadding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:inputType="text"
                android:background="@drawable/et_rounded_corner"
                />


            <EditText
                android:layout_width="@dimen/_230sdp"
                android:layout_height="wrap_content"
                android:id="@+id/et_emergency1_mobile_no_register"
                android:layout_below="@id/et_personal_mo_no_register"
                android:hint="Emergency Mobile No. 1"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/secondaryColor"
                android:textSize="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_8sdp"
                android:drawableLeft="@drawable/baseline_contact_emergency_24"
                android:drawablePadding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:inputType="text"
                android:background="@drawable/et_rounded_corner"
                />
            <EditText
                android:layout_width="@dimen/_230sdp"
                android:layout_height="wrap_content"
                android:id="@+id/et_emergency2_mobile_no_register"
                android:layout_below="@id/et_emergency1_mobile_no_register"
                android:hint="Emergency Mobile No. 2"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/secondaryColor"
                android:textSize="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_8sdp"
                android:drawableLeft="@drawable/baseline_contact_emergency_24"
                android:drawablePadding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:inputType="text"
                android:background="@drawable/et_rounded_corner"
                />


            <EditText
                android:layout_width="@dimen/_230sdp"
                android:layout_height="wrap_content"
                android:id="@+id/et_username_register"
                android:layout_below="@id/et_emergency2_mobile_no_register"
                android:hint="Username"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/secondaryColor"
                android:textSize="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_8sdp"
                android:drawableLeft="@drawable/user__icon"
                android:drawablePadding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:inputType="text"
                android:background="@drawable/et_rounded_corner"
                />
            <EditText
                android:layout_width="@dimen/_230sdp"
                android:layout_height="wrap_content"
                android:id="@+id/et_password_register"
                android:layout_below="@id/et_username_register"
                android:hint="Password"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/secondaryColor"
                android:textSize="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_8sdp"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:inputType="textPassword"
                android:background="@drawable/et_rounded_corner"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Password"
                android:id="@+id/chk_pass_show_hide"
                android:textColor="@color/secondaryColor"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:textSize="15dp"
                android:layout_below="@id/et_password_register"
                android:backgroundTint="@color/primaryColor"
                android:buttonTint="@color/primaryColor"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_register"
                android:text="Register"
                android:textColor="@color/primaryColor"
                android:backgroundTint="@color/secondaryColor"
                android:textSize="18dp"
                android:fontFamily="sans-serif-black"
                android:layout_below="@id/chk_pass_show_hide"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/side_view"
        android:src="@drawable/size_shape"
        android:layout_marginRight="-400dp"
        android:layout_marginTop="80dp"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/side_view2"
        android:src="@drawable/size_shape"
        android:layout_marginLeft="-400dp"
        android:layout_marginBottom="-200dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
